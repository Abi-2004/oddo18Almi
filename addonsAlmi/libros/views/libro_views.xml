<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_libro_form" model="ir.ui.view">
        <field name="name">Vista formulario de libro</field>
        <field name="model">libro</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="autor"/>
                        <field name="fecha_publicacion"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_libro_tree" model="ir.ui.view">
        <field name="name">Vista de lista de libros</field>
        <field name="model">libro</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="autor"/>
                <field name="fecha_publicacion"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>
</odoo>
