<odoo>
<template id="report_venta_document">
    <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <h2>Venta: <t t-esc="o.name"/></h2>
                    <p>Fecha: <t t-esc="o.fecha"/></p>
                    <p>Total: <t t-esc="o.total"/></p>
                    <p>MÃ©todo de Pago: <t t-esc="o.metodo_pago"/></p>
                    <h3>Productos:</h3>
                    <table border="1" style="width:100%; border-collapse: collapse;">
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Subtotal</th>
                        </tr>
                        <t t-foreach="o.product_lines" t-as="line">
                            <tr>
                                <td><t t-esc="line.product_id.name"/></td>
                                <td><t t-esc="line.cantidad"/></td>
                                <td><t t-esc="line.precio"/></td>
                                <td><t t-esc="line.subtotal"/></td>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
